<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/iniciofondo"> <!-- Aquí se establece la imagen de fondo -->

    <Button
        android:id="@+id/btnRegistrarCita"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="Registrar cita" />

    <Button
        android:id="@+id/btnVerificarVehiculo"
        android:text="Verificar vehículo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAdministrarPerfil"
        android:text="Administrar perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAsignarPerfiles"
        android:text="Asignar perfiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnPagarServicio"
        android:text="Pagar servicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
